



import java.util.* ;
import java.io.*; 
public class Solution {
	public static void selectionSort(int arr[], int n) {
		for(int i=0;i<n-1;i++){
			int minindex = i;
			for(int j=i+1;j<n;j++){
				if(arr[minindex]>arr[j]){
					minindex = j;
				}
			}
			int temp = arr[minindex];
				arr[minindex]= arr[i];
				arr[i]= temp;
			}
		}
	}
